<p><%= @event.title %></p>

<p>Organizer:<br>
  <%= link_to "#{@event.creator.name}", user_path(@event.creator_id) %>
</p>

<p>Invitees:</p>
<ul><% @confirmed_users.each do |user| %>
  <li><%= link_to "#{user.name}", user_path(user) %></li>
  <% end %>
</ul>

<% if current_user && @uninvited_users.any? %>
  <p>Invite someone to this event:</p>
    <ul><% @uninvited_users.each do |user| %>
      <li><%= link_to "#{user.name}", attendances_path(event_id: @event.id, user_name: user.name), method: :post %></li>
    <% end %>
    </ul>
<% end %>